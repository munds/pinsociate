---
import "../styles/global.css";
import CheckoutForm from "../components/CheckoutForm.jsx";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <title>Checkout | Pinsociate, Inc</title>
  </head>
  <body class="bg-slate-100 min-h-screen font-sans flex flex-col">
    <header class="bg-white shadow p-6 mb-8 flex justify-between items-center">
      <a href="/" class="font-bold text-xl">Pinsociate, Inc</a>
      <nav>
        <a href="/products" class="hover:underline">Products</a>
        <a href="/cart" class="hover:underline">Cart</a>
      </nav>
    </header>
    <main class="max-w-2xl mx-auto flex-grow w-full">
      <h2 class="text-2xl font-bold mb-6">Checkout</h2>
      <CheckoutForm client:load />
    </main>
    <Footer />
  </body>
</html>
